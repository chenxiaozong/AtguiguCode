<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".commom.butterknife.ButterKnifeActivity">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_butterKnife_item1"
            android:text="Item1"

            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_butterKnife_item2"
            android:text="Item2"

            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_butterKnife_item3"
            android:text="Item3"

            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_butterKnife_item4"
            android:text="Item4"

            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_butterknife_toas"
        android:text="Button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="14sp"
        android:text="显示"
        android:padding="3dp"
        android:background="@android:color/darker_gray"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_butterknife_info"
        android:text="info"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
